<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AUS.GUI.Views.MessageWindow"
        Width="300" Height="100"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Title="Error">
        
        <Grid RowDefinitions="Auto, Auto" Margin="20">
            <TextBlock Grid.Row="0" Name="TextBlockMessage" FontSize="16" />
            <Button Grid.Row="1" 
                    Name="ButtonOk" Content="OK" 
                    HorizontalAlignment="Right" HorizontalContentAlignment="Center"
                    Margin="0,20,0,0"
                    Click="ButtonOk_Click" Width="100" />
        </Grid>
        
</Window>
